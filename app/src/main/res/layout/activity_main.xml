<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F4F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Your Drink and Preferences"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:paddingBottom="20dp" />

        <!-- for creating checkbox-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Ingredients:"
            android:textSize="18sp"
            android:textColor="#333"
            android:paddingBottom="10dp" />

        <CheckBox
            android:id="@+id/milkCheckBoxID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/SugarCheckBoxID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugar"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/WaterCheckBoxID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water"
            android:textSize="16sp" />

        <Button
            android:id="@+id/ShowCheckBoxButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Selected Ingredients"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/design_default_color_primary"
            android:textColor="#fff"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/checkBoxResultTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:paddingTop="10dp" />

        <!-- Radio Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which programming language do you prefer?"
            android:textSize="18sp"
            android:textColor="#333"
            android:paddingTop="20dp"
            android:paddingBottom="10dp" />

        <RadioGroup
            android:id="@+id/radioGroupId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/pythonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/javaId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java"
                android:textSize="16sp" />
        </RadioGroup>

        <Button
            android:id="@+id/ShowRadioButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Selected Language"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/design_default_color_primary"
            android:textColor="#fff"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/radioResultTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:paddingTop="10dp" />

        <!-- adding RatingBar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate your experience:"
            android:textSize="18sp"
            android:textColor="#333"
            android:paddingTop="20dp"
            android:paddingBottom="10dp" />

        <RatingBar
            android:id="@+id/ratingBarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5" />

        <!--creating a SeekBar  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adjust Brightness:"
            android:textSize="18sp"
            android:textColor="#333"
            android:paddingTop="20dp"
            android:paddingBottom="10dp" />

        <SeekBar
            android:id="@+id/seekBarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/seekBarValueId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness: 50"
            android:textSize="16sp"
            android:textColor="#333"
            android:paddingTop="10dp" />

        <!-- Switch -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Notifications:"
            android:textSize="18sp"
            android:textColor="#333"
            android:paddingTop="20dp"
            android:paddingBottom="10dp" />

        <Switch
            android:id="@+id/switchId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable" />

        <TextView
            android:id="@+id/switchResultTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666"
            android:paddingTop="10dp" />
    </LinearLayout>
</ScrollView>
